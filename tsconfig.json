{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    // "baseUrl": "./",
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    
    "sourceMap": true,
    "declaration": true,
    "declarationMap": false,
    
    "strict": true,
    "noImplicitAny": false,

    "lib": [ "es2019", "dom" ],
    "typeRoots": [
      "../xd-typings/"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/node_modules",
    "**/.*/"
  ],
}